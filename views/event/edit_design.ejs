

    <form class="form_custom"  action="/update-design/<%=event_id%>" method="post">
    <div class="adiminBodyContent">
      <!-- Start Page Title Header Starts-->
        <div class="headerTitle">
            <h2>Edit Event Design</h2>    
            <% if(typeof errors !== 'undefined' && typeof errors.message !== 'undefined') { %>
              <p class = "alert alert-danger ml15 mr15 text-center"><%- errors.message %></p>
           <% } %>  
           <% if(typeof errors !== 'undefined' && typeof errors.msg !== 'undefined') { %>
              <p class = "alert alert-success ml15 mr15 text-center"><%- errors.msg %></p>
           <% } %>      
        </div>
          <!-- End Page Title Header Ends-->
        <div class="midContentRightBar">
        <div class="meddleContentSec agendaContentInfo">
          <div class="eventInfoBox">
              <div class="infoBoxContent">
                 
                  <div class="boxContentRow">
                      <span class="infoTitle">Primary Colour</span>
                      <div class="infoBoxData">
                          <input type="text" class="form-control" name="primary_color" value="<%=data.primary_color %>" id="primary_color" placeholder="#ffffff">
                          <% if(typeof errors !== 'undefined' && typeof errors.primary_color !== 'undefined') { %>
                            <p class = "error"><%- errors["primary_color"] %></p>
                        <% } %> 
                      </div>
                  </div>
                  <div class="boxContentRow">
                      <span class="infoTitle">Secondary Colour</span>
                      <div class="infoBoxData">
                          <input type="text" class="form-control" name="secondary_color" value="<%=data.secondary_color %>" id="secondary_color" placeholder="#fff000">
                          <% if(typeof errors !== 'undefined' && typeof errors.secondary_color !== 'undefined') { %>
                            <p class = "error"><%- errors["secondary_color"] %></p>
                            <% } %> 
                      </div>
                  </div>
                
                  
                  <div class="boxContentRow">
                      <span class="infoTitle">Third Colour</span>
                      <div class="infoBoxData">
                          <input type="text" class="form-control" id="" placeholder="#000000" name="third_color" value="<%=data.third_color %>" id="address">
                          <% if(typeof errors !== 'undefined' && typeof errors.third_color !== 'undefined') { %>
                            <p class = "error"><%- errors["third_color"] %></p>
                        <% } %> 
                      </div>
                  </div>
                 
              </div>
          </div>
          
        </div>
        
            <!-- Start Sponsor Logo section -->
            <div class="addEventImgSec">
              <div class="infoBoxTitle">
                  <h3>Add Background image</h3>
              </div>
                <div class="addEventImg">
                    <div class="addEvntImgColl addEvntImg">
                      <div class="addEImg">
                          <input type="file" id="myFile" class="upload-img" name="image"  accept="image/*"> 
  
                          <input type="hidden" class="image_upload" name="image_data" value="<%=data.background_image %>"/>
                          <div class="addNewEvntImg">
                              <h4>Background Image</h4>
                              <img src="/assets/images/navIcon/addImg.png" />
                          </div>
                         
                      </div>
                    </div>
                    <div class="addEvntImgColl">
                      <div class="updateEventImg">
                        <% if(data.background_image){ %>
                        <img class="display_img" src="/uploads/<%=data.background_image %>" />
                        <% } else { %>
                        <img class="display_img" src="/uploads/user.png" />

                          <% } %>
                          <!-- <span class="itemTrash"><img src="/assets/images/navIcon/trash.png" /></span> -->
                      </div>
                    </div>
                    <% if(typeof errors !== 'undefined' && typeof errors.image_data !== 'undefined') { %>
                      <p class = "error"><%- errors["image_data"] %></p>
                  <% } %> 
                </div>
            </div>
           
    </div>
        <!-- Submit Button -->
        <div class="adminSubmitBtn">
            <button type="submit" class="btn btn-primary adminPageBtn">Update Design</button>
        </div>
        <!-- Submit Button -->
    </div>
  </form>
   
  
  <!-- content-wrapper ends -->
  
