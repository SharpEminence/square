                      <tr>
                        <th class="th-sm">Sr.No.</th>
                        <th class="th-sm">Company Name</th>
                        <th class="th-sm">Person Name</th>
                        <th class="th-sm">Email</th>
                        <th class="th-sm">Phone</th>
                        <th class="th-sm">Address</th>
                        <th class="th-sm">Action</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% if(data.length > 0) {%>
                        <% data.map((offer,i) => { %>
                    <tr>
                    <td><%= i+1 %></td>
                    <td><%= offer.company_name %></td>
                    <td><%= offer.email %></td>
                    <td><%= offer.mobile_number %></td>
                    <td><%= offer.person_name %></td>
                    <td><%= offer.address %></td>
                    <td>
                      <div class="tableEditDelete">
                        <span class="actionEdit"><a href="/edit-client/<%= offer._id %>"><i class="fa fa-pencil"></i></a></span>
                        <!-- <span class="actionDelete"><a href="#"><i class="fa fa-trash"></i></a></span> -->
                      </div>
                      <span>
                    <!-- <a href="/edit-client/<%= offer._id %>" data-toggle="tooltip" data-placement="top" title="Edit">
