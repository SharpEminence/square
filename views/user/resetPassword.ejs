

<div class="content-wrapper">
  <!-- Page Title Header Starts-->
  <div class="headerTitle">
      <h2>Change Password</h2>    
  </div>
  <% if(typeof errors !== 'undefined' && typeof errors.msg !== 'undefined') { %>
    <p class = "alert alert-success ml15 mr15 text-center"><%- errors.msg %></p>
 <% } %>  
 <% if(typeof errors !== 'undefined' && typeof errors.message !== 'undefined') { %>
    <p class = "alert alert-danger ml15 mr15 text-center"><%- errors.message %></p>
 <% } %>      
 <form action="/update-password" method="post" >
  <!-- Page Title Header Ends-->
<div class="midContentRightBar">
    <div class="meddleContentSec addClientBlock">
      <div class="eventInfoBox">
          <div class="infoBoxContent">
              <div class="boxContentRow">
                  <span class="infoTitle">Old Password</span>
                  <div class="infoBoxData">
                      <input type="password" class="form-control" name="old_password"  id="old_password" placeholder="Enter old password">
                      <% if(typeof errors !== 'undefined' && typeof errors.old_password !== 'undefined') { %>
                        <p class = "error"><%- errors["old_password"] %></p>
                    <% } %> 
                  </div>
              </div>
              <div class="boxContentRow">
                  <span class="infoTitle">New password</span>
                  <div class="infoBoxData">
                      <input type="password" class="form-control" id="" placeholder="Enter new password" name="new_password" id="new_password">
                      <% if(typeof errors !== 'undefined' && typeof errors.new_password !== 'undefined') { %>
                        <p class = "error"><%- errors["new_password"] %></p>
                    <% } %> 
                  </div>
              </div>
              <div class="boxContentRow">
                  <span class="infoTitle">Confirm password</span>
                  <div class="infoBoxData">
                      <input type="password" class="form-control" name="confirm_password" id="confirm_password" placeholder="Enter confirm password">
                      <% if(typeof errors !== 'undefined' && typeof errors.confirm_password !== 'undefined') { %>
                        <p class = "error"><%- errors["confirm_password"] %></p>
                    <% } %> 
                  </div>
              </div>
            
          </div>
      </div>
     
     
    <!-- Submit Button -->
    <div class="adminSubmitBtn">
        <button type="submit" class="btn btn-primary adminPageBtn">Update</button>
    </div>
    <!-- Submit Button -->
    </div>
</div>
</form>
</div>
<!-- content-wrapper ends -->
  <!-- content-wrapper ends -->

